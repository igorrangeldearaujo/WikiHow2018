<%- include('../header') %>
<form method="POST" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
  <div class="form-group">
    <label for="titulo">Titulo</label>
    <input type="text" class="form-control" name="titulo" placeholder="Digite o titulo" value="<%= publicacao.titulo %>">
  </div>
  <div class="form-group">
      <label for="conteudo">Conteúdo</label>
      <textarea type="text" class="form-control" name="conteudo" placeholder="Digite o conteúdo"><%= publicacao.conteudo%></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
</form>
<%- include('../footer') %>